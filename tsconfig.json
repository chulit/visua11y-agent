{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*"]
}
